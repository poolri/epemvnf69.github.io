/* ######### font-face(end) ######### */


	.inner_wrap { position: relative; width: 100%; max-width: 1920px; margin: 0 auto; text-align: center; }
	.frist { font-family: "Anton"; }
	.last { font-family: "Anton"; }
	.middle { font-family: "Bungee"; }

	section .inner_wrap p { font-family: "NotoSansKR_400"; }
	

/* ---------- Desktop (start) ---------- */


@media screen and (min-width: 1025px) {

	body { font-size: 16px; }

	section .inner_wrap h1 .frist { font-size: 5em; vertical-align: middle; padding-right: 0.2em; }
	section .inner_wrap h1 .last { font-size: 5em; vertical-align: middle; padding-left: 0.2em; }
	section .inner_wrap h1 .middle { font-size: 4em; vertical-align: middle; }

	section .inner_wrap img { display: block; position: absolute; left: 0; top: 0; right: 0; bottom: 0; width: 100%; height: 100%; max-width: 100px; max-height: 100px; object-fit: contain; }

	section .inner_wrap p { margin-top: 1em; }

}


/* ----------- Desktop (end) ----------- */


/* ---------- Tablet (start) ---------- */


@media screen and (min-width: 768px) and (max-width: 1024px) {

	body { font-size: 14px; }

}


/* ----------- Tablet (end) ----------- */


/* ---------- Mobile (start) ---------- */


@media screen and (max-width: 767px) {
	
	body { font-size: 14px; }

}


/* ----------- Mobile (end) ----------- */