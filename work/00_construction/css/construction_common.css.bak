/* ######## font-face(start) ######## */

/* noto-sans-kr-300 - cyrillic_korean_latin */
@font-face {
  font-family: 'NotoSansKR_300';
  src: url('../fonts/noto-sans-kr-v36-cyrillic_korean_latin-300.woff2') format('woff2'), /* Chrome 36+, Opera 23+, Firefox 39+, Safari 12+, iOS 10+ */
       url('../fonts/noto-sans-kr-v36-cyrillic_korean_latin-300.ttf') format('truetype'); /* Chrome 4+, Firefox 3.5+, IE 9+, Safari 3.1+, iOS 4.2+, Android Browser 2.2+ */
}
